#include<iostream>
using namespace std;
int main()
{
    int initial_bal,deposit_amount,withdrawal_amount;
    cout<<"Enter the initial bal: ";
    cin>>initial_balance;
    cout<<"Enter the deposit amount: ";
    cin>>deposit_amount;
    cout<<"Enter withdrawal amount: ";
    cin>>withdrawal_amount;
    initial_bal+=deposit_amount;
    cout<<"Balance after deposit: "<<initial_bal<<endl;
    initial_bal-=withdrawal_amount;
    cout<<"Balance after withdrawal: "<<initial_bal;
}
